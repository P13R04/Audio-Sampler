# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# For development: localhost automatically allowed
# For production: comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:4200

# File Upload
# Maximum file size in MB (default: 10)
MAX_FILE_SIZE=10

# Directories (optional, defaults provided)
# PUBLIC_DIR=./public
# DATA_DIR=./public/presets

# Database (optional, for future MongoDB migration)
# DB_URL=mongodb+srv://user:pass@cluster.mongodb.net/
# DB_NAME=audio-sampler
